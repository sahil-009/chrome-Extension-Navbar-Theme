{
    "manifest_version": 2,
    "name": "My Custom Theme",
    
    "version": "1.0",
    "theme": {
      "images": {
        "theme_frame": "logo.png",
        "theme_toolbar": "logo.png",
        "theme_tab_background": "logo.png"
      },
      "icons": {
        "128": "logo.png"
      },
      "permission": ["actveTab"],
      
      "colors": {
        "accentcolor": [66, 133, 244],
        "textcolor": [51, 51, 51],
        "toolbar": [255, 255, 255],
        "tab_text": [102, 102, 102],
        "toolbar_text": [51, 51, 51]

      },
      "properties": {
        "ntp_background_alignment": "bottom",
        "ntp_background_repeat": "no-repeat",
        "ntp_background_stretch": true,
        "ntp_background_custom_repeat": "no-repeat"
      }
    }
  }
  